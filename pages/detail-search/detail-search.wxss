/* pages/detail-search/detail-search.wxss */

page{
  background-color: #f1f1f1;
}
/* 搜索 */
.search{
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  margin: 0 10rpx;
  border: 4rpx solid #000;
  border-radius: 16rpx;
  background-color: #fff;
}
.icon{
  padding: 0 20rpx;
}
input{
  width: 500rpx;
  height: 60rpx;
}

.line{
  height: 20rpx;
  border: 1rpx solid #000;
  margin: 0 10rpx;
}
.searchBtn{
  padding-left: 20rpx;
  color: blue;
  font-weight: 700;
}


/* 内容 */
.recommend{
  margin: 20rpx auto;
  width: 90%;
  border-radius: 16rpx;
  background-color: #fff;
}
.tabs{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  color: #aaa;
}
.active{
  color: black;
  font-weight: 700;
}

.content{
  padding: 20rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.left{
  flex: 1;
}
.left text:last-of-type{
  padding: 0 20rpx;
  width: 100%;
}